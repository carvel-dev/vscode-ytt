{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "YAML",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "source.yaml"
		}
	],
	"repository": {
		"comment": {
			"begin": "(?:(^[ \\t]*)|[ \\t]+)(?=#\\p{Print}*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.yaml"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"include": "#ytt-comment"
				},
				{
					"include": "#ytt-annotation"
				},
				{
					"include": "#yaml-comment"
				}
			]
		},
		"ytt-comment": {
			"begin": "#!",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.ytt"
				}
			},
			"end": "\\n",
			"name": "comment.line.number-sign.ytt"
		},
		"ytt-annotation": {
			"begin": "#@",
			"beginCaptures": {
				"0": {
					"name": "keyword.other.ytt"
				}
			},
			"end": "\\n",
			"patterns": [
				{
					"include": "source.starlark"
				}
			]
		},
		"yaml-comment": {
			"begin": "#",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.yaml"
				}
			},
			"end": "\\n",
			"name": "comment.line.number-sign"
		}
	},
	"scopeName": "source.yaml.ytt"
}
